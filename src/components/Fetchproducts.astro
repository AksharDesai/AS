---
import { fetchProducts } from "../lib/fetchProducts";

// Fetch products dynamically from your Supabase DB
const fetchedproducts = await fetchProducts();
console.log("Fetched products:", fetchedproducts);

// Provide a fallback in case fetchedproducts is empty or null
const products = fetchedproducts && fetchedproducts.length > 0 ? fetchedproducts : [];
---

<!-- Custom CSS -->
<style>
  .red-dot {
    color: crimson;
    font-weight: bolder;
  }
</style>

<section id="FeaturedProducts" class="py-16 bg-neutral-900">
  <div class="container mx-auto px-4 xl:px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 px-4">
        More Featured Products
      </h2>
      <div class="w-24 h-1 bg-red-600 mx-auto"></div>
    </div>

    <!-- Product Filters -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="px-6 py-2 rounded-full bg-red-600 text-white font-montserrat text-sm hover:bg-red-700 transition-colors duration-300">
        All Products
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-gray-700 text-gray-300 font-montserrat text-sm hover:border-red-600 hover:text-red-600 transition-colors duration-300">
        Kitchen Storage
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-gray-700 text-gray-300 font-montserrat text-sm hover:border-red-600 hover:text-red-600 transition-colors duration-300">
        Wardrobe & Closet
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-gray-700 text-gray-300 font-montserrat text-sm hover:border-red-600 hover:text-red-600 transition-colors duration-300">
        Space Saving
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-gray-700 text-gray-300 font-montserrat text-sm hover:border-red-600 hover:text-red-600 transition-colors duration-300">
        General Hardware
      </button>
    </div>

    <!-- Products Grid -->
    <div class="product-container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product) => (
        <div
          
          id={product.id}
          class={`product-card-${product.id} group relative bg-neutral-800 rounded-xl p-6 transition-all duration-300 hover:transform hover:-translate-y-2 flex flex-col justify-center mb-12`}
        >
          {/* Product Image */}
          <div class="product-image relative aspect-square bg-neutral-700/50 rounded-xl overflow-hidden mb-6">
            <img
              src={`${product.image}`}
              alt={product.name}
              class={`product-image-${product.id} w-full h-full object-cover object-center`}
            />
          </div>

          {/* Product Details */}
          <h3 class={`product-name-${product.id} text-xl font-bold text-white mb-2`}>
            {product.name}
          </h3>
          <p class={`product-description-${product.id} descDot text-neutral-400 mb-4 text-sm md:text-base`}>
            {product.description}
          </p>

          {/* Price & Rating */}
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-2">
            <span class={`product-price-${product.id} text-2xl font-bold text-red-600`}>
              ${product.price}
            </span>
            <div class="flex items-center gap-1">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class={`product-rating-${product.id} ml-1 text-white`}>
                  {product.rating}
                </span>
              </div>
            </div>
          </div>

          {/* Category */}
          <div class="mb-4">
            <span class="text-neutral-400 text-sm md:text-base">
              Category: <span class={`product-category-${product.id} text-white`}>{product.category}</span>
            </span>
          </div>

          {/* CTA Button */}
          <button class="w-full bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 transition-colors text-sm md:text-base">
            Learn More
          </button>

          {/* Hover Border Effect */}
          <div class="absolute inset-0 border-2 border-transparent group-hover:border-red-600/50 rounded-xl transition-all duration-300 pointer-events-none"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Inline Script: Replaces hyphens with bullet characters in description elements -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".descDot").forEach((element) => {
      element.innerHTML = element.innerHTML.replace(/-/g, "â€¢");
    });
  });
</script>
