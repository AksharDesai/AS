<button id="searchTrigger"
class="bg-red-600 text-white p-3 rounded-l-lg shadow-lg hover:bg-red-700 transition-colors">
<i class="fas fa-search text-xl"></i>
</button>

<div id="searchPanel"
class="hidden fixed right-0 top-0 h-screen w-full md:w-96 bg-white shadow-2xl transform transition-transform duration-300">

   

<div class="h-full overflow-y-auto">
    <!-- Header -->
    <div class="bg-neutral-900 p-6 flex justify-between items-center">
        <h3 class="text-xl font-bold text-white">Search & Filter</h3>
        <button id="closeSearch" class="text-white hover:text-red-600">
            <i class="fas fa-times text-xl"></i>
        </button>
    </div>
    <form id="searchForm"  action="">
        
        <!-- Search Box -->
        <div class="p-6 border-b border-neutral-200">
            <div class="relative">
                <input type="text" id="searchInput" name="product_searched"
                    class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:outline-none focus:border-red-600"
                    placeholder="Search products..." autocomplete="off">

                    <button type="submit">

                        <i class="fas fa-search absolute right-4 top-4 text-neutral-400"></i>
                    </button>
            </div>

        </div>

    </form>

    <!-- Filters -->
    <div class="p-6">
        <h4 class="font-semibold mb-4">Filters</h4>

        <!-- Category Filter -->
        <div class="mb-6">
            <label class="block text-sm font-medium mb-2">Category</label>
            <select
                class="w-full px-4 py-2 border border-neutral-300 rounded-lg focus:outline-none focus:border-red-600">
                <option value="">All Categories</option>
                <option value="storage">Storage Solutions</option>
                <option value="hardware">Hardware</option>
                <option value="foldable">Foldable Systems</option>
                <option value="accessories">Accessories</option>
            </select>
        </div>

        <!-- Sort By -->
        <div class="mb-6">
            <label class="block text-sm font-medium mb-2">Sort By</label>
            <select
                class="w-full px-4 py-2 border border-neutral-300 rounded-lg focus:outline-none focus:border-red-600">
                <option value="popular">Most Popular</option>
                <option value="newest">Newest First</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
                <option value="rating">Highest Rated</option>
            </select>
        </div>

        <!-- Apply Filters Button -->
        <button class="w-full bg-red-600 text-white py-3 rounded-lg hover:bg-red-700 transition-colors">
            Apply Filters
        </button>
    </div>
</div>
</div>


<script is:inline>
    const searchBtn = document.getElementById('searchTrigger')
    const searchPanel = document.getElementById('searchPanel')
    searchBtn.addEventListener('click',function(e){
        searchPanel.classList.remove('hidden')
    })    

</script>