---

import Layout from '../layouts/Layout.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	   <!-- Main Content Area -->
       <main class="flex-1 ml-0 lg:ml-64 overflow-y-auto overflow-x-hidden bg-black" id="el-6jvywkgc">
        <!-- Header -->
        <section id="overview" class="p-6 ">
            <!-- Cards Section -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- Users Card -->
                <div class="bg-[#171717]   rounded-lg p-6 hover:border-red-500 transition-colors">
                    <h3 class="text-gray-300 font-medium mb-4">Number of Users Logged In</h3>
                    <p class="text-4xl font-bold text-white">120</p>
                </div>
    
                <!-- Products Card -->
                <div class="bg-[#171717]   rounded-lg p-6 hover:border-red-500 transition-colors">
                    <h3 class="text-gray-300 font-medium mb-4">Number of Products</h3>
                    <p class="text-4xl font-bold text-white">product_count</p>
                </div>
    
                <!-- Catalogue Card -->
                <div class="bg-[#171717]   rounded-lg p-6 hover:border-red-500 transition-colors">
                    <h3 class="text-gray-300 font-medium mb-4">Change Catalogue</h3>
                    <form method="POST" action="">
    
                        <div class="flex flex-col items-center space-x-4">
                            
                            <input type="text" placeholder="Add/Change" name="link"
                            class="w-full px-4 py-2 mb-4   rounded-lg bg-black text-white placeholder-gray-500  focus:border-red-500 focus:ring-1 focus:ring-red-500">
                            <button type="submit"
                            class="w-1/2 bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition-colors font-bold">
                            Submit
                        </button>
                    </div>
                </form>
                </div>
            </div>
    
            <!-- Product List Section -->
            <div class="bg-[#171717] rounded-lg p-4 sm:p-6">
                <div
                    class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 space-y-4 md:space-y-0">
                    <h2 class="text-lg sm:text-xl font-bold text-white">Product List</h2>
                    <div class="w-full md:w-auto flex flex-col sm:flex-row gap-3 sm:gap-4">
    
                        <button class="bg-red-600 text-white px-4 sm:px-6 py-2 rounded-lg hover:bg-red-700 transition-colors 
                                      font-bold text-sm sm:text-base w-full sm:w-auto">
                            Add Product
                        </button>
                    </div>
                </div>
    
                <!-- Product Table -->
                <div class="overflow-x-auto pb-2">
                    <table class="w-full min-w-[600px]">
                        <thead class="bg-black border-b-2 border-red-500">
                            <tr>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Product Name
                                </th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Category
                                </th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Stock</th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Rating</th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Price</th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Status</th>
    
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-red-600/50">
                            
                            
                                
                            <tr class="hover:bg-black/40">
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">product.name</td>
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">Channel</td>
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">40</td>
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">product.rating</td>
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">product.price</td>
                                <td class="px-4 py-3 sm:px-6">
                                    <span
                                        class="px-2 py-1 text-xs font-bold text-green-400 bg-gray-900 rounded-full whitespace-nowrap">Active</span>
                                </td>
    
                            </tr>
                            
                                
                            <!-- Repeat similar structure for other rows -->
                        </tbody>
                    </table>
                </div>
    
    
    
            </div>
            <!-- User List Section -->
            <div class="bg-[#171717] rounded-lg p-4 sm:p-6 mt-20">
                <div
                    class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 space-y-4 md:space-y-0">
                    <h2 class="text-lg sm:text-xl font-bold text-white">User List</h2>
    
                </div>
    
                <!-- Product Table -->
                <div class="overflow-x-auto pb-2">
                    <table class="w-full min-w-[600px]">
                        <thead class="bg-black border-b-2 border-red-500">
                            <tr>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Phone Number
                                </th>
                                <th class="px-4 py-3 sm:px-6 text-left text-xs sm:text-sm font-bold text-white">Time</th>
    
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-red-600/50">
                            <tr class="hover:bg-black/40">
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">Product 1</td>
                                <td class="px-4 py-3 sm:px-6 text-sm text-white">Electronics</td>
    
                            </tr>
                            <!-- Repeat similar structure for other rows -->
                        </tbody>
                    </table>
                </div>
    
    
    
            </div>
            <!-- Message section -->
            <div class="bg-[#171717]  rounded-lg p-4 sm:p-6 mt-20">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
                    <h2 class="text-xl font-bold text-red-500">Your Messages</h2>
    
                </div>
    
                <!-- Messages Container -->
                <div class="space-y-4 max-h-[600px] overflow-y-auto mb-6 pr-2">
                    <!-- Message Item -->
                    <div class="bg-black p-4 rounded-lg border-2 border-gray-500 hover:border-red-500 transition-colors">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-semibold text-gray-200">New Product Update</h3>
    
                        </div>
                        <p class="text-gray-400 mb-2">The latest product catalogue has been updated with new items. Please
                            review the changes and approve them.</p>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-500">2024-01-20 10:30 AM</span>
    
                        </div>
                    </div>
    
                    <!-- Message Item -->
                    <div class="bg-black p-4 rounded-lg border-2 border-gray-500  hover:border-red-500 transition-colors">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-semibold text-gray-200">Inventory Alert</h3>
    
                        </div>
                        <p class="text-gray-400 mb-2">Stock levels for Product ID #12345 are running low. Consider
                            restocking soon.</p>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-500">2024-01-19 15:45 PM</span>
    
                        </div>
                    </div>
    
                    <!-- Message Item -->
                    <div class="bg-black p-4 rounded-lg border-2 border-gray-500  hover:border-red-500 transition-colors">
                        <div class="flex justify-between items-start mb-2">
                            <h3 class="font-semibold text-gray-200">Customer Feedback</h3>
    
                        </div>
                        <p class="text-gray-400 mb-2">New customer feedback received for the latest product line. Overall
                            satisfaction rating is positive.</p>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-500">2024-01-18 09:15 AM</span>
    
    
                        </div>
                    </div>
                </div>
    
                <!-- Load More & Pagination -->
    
            </div>
        </section>
    
    
    
    
    
    
    
    
    
    
    </main>
</Layout>
